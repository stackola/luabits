list(bucket, options, callback(response))
options:
{
    order:[field, direction] // default is "time", "desc"
    or
    where:[field, operator, needle]
    pageSize:number(1-25)    // default is 10
    pageToken:string         // get the next page
}
response:
{
    items:[object],
    pageToken:string||false,
}